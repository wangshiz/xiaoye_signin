/* pages/login/login.wxss */
.userinfo {
  height: 500rpx;
  width: 500rpx;
  border-left: none;
  border-right: none;
  align-items: center;
  text-align: center;
  transition: all 300ms ease;
  position: absolute;
  left: 50%;
  top: 30%;
  margin-top: -300rpx;
  margin-left: -250rpx;
}

.userinfo-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  margin-top: 90rpx;
  margin-bottom: 90rpx;
}

.userinfotext {
  font-size: 32rpx;
}

.successed {
  font-size: 32rpx;
  color: #cacaca;
}