/* ono/signin/signin.wxss */
.sign-add {
  margin:0.5%;
  text-align:center;
  position:fixed;
  bottom:0;
  width:99%;
  height: 100rpx;
}

.sign-add button{
  width: 99%;
  font-size: 32rpx;
  margin-top: 20rpx;
}



.sign-detail {
  width: 97%;
  margin: 1.5%;
  height: 100px;
  background-color:#FFFFFF;
  border-radius: 10rpx;
  position: relative;
}

.sign-canvas {
  position: relative;
  float: left;
  width: 33.33%;

}

.cir {
  width: 100%; 
  height:80px; 
  border: 1px solid black;
}

.cc {
  font-size: 12px;
  color:#1EB5A1;
  width:120px;
  text-align: center;
  position: absolute;
  top: 34px;
  border: 1px solid black;
}

.cr {
  font-size: 12px;
  color:#1EB5A1;
  width:120px;
  text-align: center;
  position: absolute;
}


.containers {
  border: 1px solid black;
  height:750rpx;

}

.yearmonth {
  border: 1px solid black;
  width: 30%;
  text-align: center;
  position: absolute;
  left: 50%;
  margin-left: -15%;
  font-size: 32rpx;
  color:#1EB5A1;
  font-style: oblique;
  font-weight: 600;
}